{
  "name": "kikssitevf2",
  "version": "1.0.0",
  "description": "Site web de voyage Kiks Travel",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "optimize:js": "terser public/js/*.js -o public/js/min/*.js",
    "optimize:css": "cleancss -o public/css/min/styles.min.css public/css/*.css",
    "optimize:html": "html-minifier --collapse-whitespace --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes --remove-tag-whitespace --use-short-doctype --minify-css true --minify-js true public/*.html -o public/min/*.html",
    "optimize:images": "node optimize.js",
    "optimize:video": "node compress-video.js",
    "build": "npm run optimize:js && npm run optimize:css && npm run optimize:html && npm run optimize:images && npm run optimize:video"
  },
  "dependencies": {
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "resend": "^2.0.0"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "fluent-ffmpeg": "^2.1.3",
    "html-minifier": "^4.0.0",
    "nodemon": "^2.0.22",
    "sharp": "^0.33.2",
    "terser": "^5.26.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
